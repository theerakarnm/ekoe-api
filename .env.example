DATABASE_URL=postgresql://user:password@localhost:5432/dbname
BETTER_AUTH_SECRET=your-secret-key
BETTER_AUTH_URL=http://localhost:3000
PORT=3000

# Google OAuth (optional - for customer authentication)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Service (optional - for verification and password reset)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@example.com

# Web Application URL
WEB_URL=http://localhost:5173

# Payment Configuration
# PromptPay Configuration - Thailand's national instant payment system
# PROMPTPAY_MERCHANT_ID: Your PromptPay merchant/business ID (usually phone number or tax ID)
PROMPTPAY_MERCHANT_ID=your-promptpay-merchant-id
# PROMPTPAY_WEBHOOK_SECRET: Secret key for verifying PromptPay webhook signatures
PROMPTPAY_WEBHOOK_SECRET=your-promptpay-webhook-secret

# 2C2P Configuration - Payment gateway for credit cards and alternative payments
# TWOC2P_MERCHANT_ID: Your 2C2P merchant account ID
TWOC2P_MERCHANT_ID=your-2c2p-merchant-id
# TWOC2P_SECRET_KEY: Secret key for signing API requests and verifying webhooks
TWOC2P_SECRET_KEY=your-2c2p-secret-key
# TWOC2P_API_URL: 2C2P API endpoint (use sandbox URL for testing)
TWOC2P_API_URL=https://api.2c2p.com
# TWOC2P_WEBHOOK_SECRET: Secret key for verifying 2C2P webhook signatures
TWOC2P_WEBHOOK_SECRET=your-2c2p-webhook-secret

# Payment Settings
# PAYMENT_QR_EXPIRY_MINUTES: Time in minutes before PromptPay QR code expires (default: 15)
PAYMENT_QR_EXPIRY_MINUTES=15
# PAYMENT_POLLING_INTERVAL_MS: Interval in milliseconds for frontend to poll payment status (default: 5000)
PAYMENT_POLLING_INTERVAL_MS=5000
# PAYMENT_MAX_RETRY_ATTEMPTS: Maximum number of payment retry attempts allowed per order (default: 3)
PAYMENT_MAX_RETRY_ATTEMPTS=3
